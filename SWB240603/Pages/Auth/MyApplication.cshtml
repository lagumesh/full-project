@page
@model SWB240603.Pages.Auth.MyApplicationModel
@{
    Layout = "_My_Application";
}

<div class="container mt-4">
    <h5 class="mt-4 text-dark text-uppercase font-weight-bold text-center">
        <span>My Application</span>
    </h5>
    <hr>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-header myapp-bg">
                            <h5 class="text-white mb-0 text-center text-dark">Candidate Photo</h5>
                        </div>
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <div class="box-photo">
                                <img @* src="@Url.Content("Uploads" + Model.ApplicantDetails.Photo)" *@ alt="Photo"
                                     class="img-fluid" style="height: 100%;" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-header myapp-bg">
                            <h5 class="text-white mb-0 text-center text-dark">Signature</h5>
                        </div>
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <div class="box-photo">
                                <img @* src="@Url.Content("Uploads" + Model.ApplicantDetails.Signature)" *@ alt="Photo" class="img-fluid" style="height: 100%;">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-header myapp-bg">
                            <h5 class="text-white mb-0 text-center text-dark">ID Card</h5>
                        </div>
                        <div class="card-body d-flex align-items-center justify-content-center">
                            <div class="box-photo">
                                <img @* src="@Url.Content("Uploads" + Model.ApplicantDetails.IdentityCard)" *@ alt="Photo" class="img-fluid" style="height: 100%;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <hr>

            <h4 class="card-title mt-3">Candidate Details</h4>
            <table class="table table-striped table-responsive-lg">
                <tbody class="font-weight-bold">
                    <tr>
                        <th>Application No</th>
                        <td>@* @Model.ApplicantDetails.ApplicationNo *@</td>
                        <th>Candidate Full Name</th>
                        <td>@* @Model.ApplicantDetails.ApplicantName *@</td>
                    </tr>
                    <tr>
                        <th>Applying as</th>
                        <td>@* @Model.ApplicantDetails.AppliedUnitCode *@</td>
                        <th>Date of Birth</th>
                        <td>@* @Model.ApplicantDetails.DateOfBirth *@</td>
                    </tr>
                    <tr>
                        <th>Gender</th>
                        <td@* >@Model.ApplicantDetails.Gender *@</td>
                        <th>Aadhar No</th>
                        <td>@* @Model.ApplicantDetails.AadharNo *@</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>@* @Model.ApplicantDetails.Category *@</td>
                        <th>Email Id</th>
                        <td>@* @Model.ApplicantDetails.EmailId *@</td>
                    </tr>
                    <tr>
                        <th>Mobile No</th>
                        <td>@* @Model.ApplicantDetails.MobileNo *@</td>
                        <th>Exserviceman</th>
                        @* <td>(Model.Applicant.Reservation.IsClaimingExServicemenReservation ? "Yes" : "No")</td> *@
                    </tr>


                    <tr>
                        <th>Reservation </th>
                        <td colspan="3">
                            EXServicemen : (Model.Applicant.Reservation.IsClaimingExServicemenReservation ? "Yes" : "No"),
                            @*  Transgender : (Model.Applicant.Reservation.IsClaimingTransgenderReservation ? "Yes" : "No"),
                            PDP : (Model.Applicant.Reservation.IsClaimingPDPReservation ? "Yes" : "No"),
                            Rural : (Model.Applicant.Reservation.IsClaimingRuralReservation ? "Yes" : "No") *@
                            @* Rural : @(Model.Applicant.Reservation.IsClaimingRuralReservation ? "Yes" : "No") *@
                        </td>
                    </tr>



                    <tr>
                        <th>Government Employee</th>
                        <td>(Model.Applicant.Reservation.AreYouAGovermentEmployee ? "Yes" : "No")</td>
                        <th>Unit</th>
                        <td>Model.Applicant.UnitCode</td>
                    </tr>
                </tbody>
            </table>

            <hr>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Payment Details / ಪಾವತಿ ವಿವರಗಳು</h4>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-responsive-lg text-left">
                        <tbody class="font-weight-bold">
                            <tr>
                                <th>Payment Method:</th>
                                <td>Model.Applicant.Fee.FeeTransactions.FeeReceipts.ApplicantFeeTransactionID</td>
                            </tr>
                            <tr>
                                <th>Payment Challan Generate Date:</th>
                                <td>Model.Applicant.Fee.FeeTransactions.TransactionDate</td>
                            </tr>
                            <tr>
                                <th>Payment Fee Paid:</th>
                                <td>Model.Applicant.Fee.FeeAmount</td>
                            </tr>
                            <tr>
                                <th>Payment Bank Reference No:</th>
                                <td>Model.Applicant.Fee.OfflinePaymentReceipt.TransactionNo</td>
                            </tr>
                            <tr>
                                <th>Payment Bank Name:</th>
                                <td>Model.Applicant.Fee.OfflinePaymentReceipt.BranchName</td>
                            </tr>
                            <tr>
                                <th>Payment Bank Code:</th>
                                <td>Model.Applicant.Fee.OfflinePaymentReceipt.BranchCode</td>
                            </tr>
                            <tr>
                                <th>Payment Bank Address:</th>
                                <td>
                                    Model.Applicant.Fee.OfflinePaymentReceipt.IPAddress
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="alert alert-success text-dark  d-flex justify-content-between align-items-center"
                         role="alert">
                        <div class="text-left">
                            <h5 class="alert-heading text-dark">
                                <i class="bi bi-check-circle-fill text-success mr-2"></i> Payment Successful
                            </h5>
                            <p class="text-dark">Your payment has been successfully processed.</p>
                        </div>
                        <button class="btn btn-primary text-right" onclick="window.print()">
                            Download Application
                            / ರಸೀತಿ
                            ಮುದ್ರಿಸಿ
                        </button>
                    </div>
                </div>
            </div>

            <hr>

