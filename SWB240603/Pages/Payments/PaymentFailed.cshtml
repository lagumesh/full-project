@page
@Model SWB240603.Pages.Payments.PaymentFailedModel
@{
    Layout = "_Payment";
}

<div class="container mt-3">
    <h5 class="mt-4 text-dark text-uppercase font-weight-bold text-center">
        <span>Payment Status</span>
    </h5>
    <hr>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-12 d-flex justify-content-center align-items-center">
                            <div class="box mb-2" style="text-align: -webkit-center;">
                                <div class="box-photo">
                                    <img src="~/images/vigneshwar-rajkumar-O9pmqUq1uOU-unsplash.jpg" alt="Photo"
                                         class="img-fluid" style="
        height: 100%;
    ">
                                </div>
                                <p class="text-dark text-center p-0 font-weight-bold">
                                    Name: <span class="font-weight-light">
                                        ModelApplicant.FullName
                                    </span>
                                </p>
                                <div class="box-sign">
                                    <img src="~/images/sign.png" alt="Photo" class="img-fluid" style="
        height: 100%;
    ">
                                </div>
                                <p class="text-dark text-center p-0 font-weight-bold mt-2">Candidate Signature</p>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-6 col-sm-12 d-flex justify-content-center align-items-center">

                            <table class="table table-striped table-responsive-lg border">
                                <tbody class="font-weight-bold">
                                    <tr>
                                        <th>Application No. :</th>
                                        <td class="font-weight-normal">Model.Applicant.ApplicationNo</td>
                                        <th>Applying as :</th>
                                        <td class="font-weight-normal">Model.Applicant.ApplyingTypeCode</td>
                                    </tr>
                                    <tr>
                                        <th>Date of Birth :</th>
                                        <td class="font-weight-normal">Model.Applicant.DateOfBirth</td>
                                        <th>Gender :</th>
                                        <td class="font-weight-normal">Model.Applicant.Reservation.GenderCode</td>
                                    </tr>
                                    <tr>
                                        <th>Aadhar No :</th>
                                        <td class="font-weight-normal">Model.Applicant.AadharNo</td>
                                        <th>Category :</th>
                                        <td class="font-weight-normal">Model.Applicant.Reservation.CategoryCode</td>
                                    </tr>
                                    <tr>
                                        <th>Mobile No :</th>
                                        <td class="font-weight-normal">Model.Applicant.MobileNo</td>
                                        <th>Email Id :</th>
                                        <td class="font-weight-normal">Model.Applicant.EmailId</td>
                                    </tr>
                                    <tr>
                                        <th>Unit :</th>
                                        <td class="font-weight-normal">Model.Applicant.UnitCode</td>
                                    </tr>
                                    <tr>
                                        <th colspan="4" class="text-center"></th>
                                    </tr>
                                    <tr>
                                        <th colspan="4">Reservation:- PDP, Exserviceman, Rural Medium</th>
                              @*           <td>Model.Applicant.Reservation.IsClaimingPDPReservation</td>
                                        <td>Model.Applicant.Reservation.IsClaimingExServicemenReservation</td>
                                        <td>Model.Applicant.Reservation.IsClaimingRuralReservation</td> *@
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class=".col-lg-12 col-md-12 paymentfail">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h1>Payment Failed</h1>

                        <div class="error-icon mt-2">
                            <svg class="crossmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"
                                 width="100" height="100">
                                <circle class="cross__circle" cx="26" cy="26" r="25" fill="none"
                                        stroke="currentColor" />
                                <path class="cross__line" fill="none" stroke="currentColor"
                                      d="M16 16 36 36M36 16 16 36" />
                            </svg>
                        </div>

                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="text-dark"><strong>Application Number:</strong> Model.Applicant.ApplicationNo</p>
                                        <p class="text-dark"><strong>Name:</strong> Model.Applicant.FullName</p>
                                    </div>

                                    <div class="col-md-6">
                                        <p class="text-dark"><strong>Unit Name:</strong> Model.Applicant.UnitCode</p>
                                        <p class="text-dark"><strong>Transaction Number:</strong> Model.Applicant.Fee.OfflinePaymentReceipt.TransactionNo</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <strong>Payment Error:</strong> There was a problem processing
                                            your payment.
                                            Please try again later.
                                            <button type="button" class="close" data-dismiss="alert"
                                                    aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="buttons">
            <button class="btn btn-go-back">Go Back</button>
            <a href="PaymentSuccess"><button class="btn btn-try-again">Try Again</button></a>
        </div>
    </div>
</div>