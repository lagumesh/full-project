@page
@Model SWB240603.Pages.Payments.PaymentSuccessModel
@{
    Layout = "_Payment";
}


<div class="container mt-3">
    <h5 class="mt-4 text-dark text-uppercase font-weight-bold text-center">
        <span>Payment Status</span>
    </h5>
    <hr>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-12 d-flex justify-content-center align-items-center">
                            <div class="box mb-2" style="text-align: -webkit-center;">
                                <div class="box-photo">
                                    <img src="~/images/vigneshwar-rajkumar-O9pmqUq1uOU-unsplash.jpg" alt="Photo"
                                         class="img-fluid" style="
            height: 100%;
        ">
                                </div>
                                <p class="text-dark text-center p-0 font-weight-bold">
                                    Name: <span class="font-weight-light">
                                        Model1.Applicant.FullName
                                    </span>
                                </p>
                                <div class="box-sign">
                                    <img src="~/images/sign.png" alt="Photo" class="img-fluid" style="
            height: 100%;
        ">
                                </div>
                                <p class="text-dark text-center p-0 font-weight-bold mt-2">Candidate Signature</p>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-6 col-sm-12 d-flex justify-content-center align-items-center">

                            <table class="table table-striped table-responsive-lg border">
                                <tbody class="font-weight-bold">
                                    <tr>
                                        <th>Application No. :</th>
                                        <td class="font-weight-normal">Model1.Applicant.ApplicationNo</td>
                                        <th>Applying as :</th>
                                        <td class="font-weight-normal">Model1.Applicant.ApplyingTypeCode</td>
                                    </tr>
                                    <tr>
                                        <th>Date of Birth :</th>
                                        <td class="font-weight-normal">Model1.Applicant.DateOfBirth</td>
                                        <th>Gender :</th>
                                        <td class="font-weight-normal">Model1.Applicant.Reservation.GenderCode</td>
                                    </tr>
                                    <tr>
                                        <th>Aadhar No :</th>
                                        <td class="font-weight-normal">Model1.Applicant.AadharNo</td>
                                        <th>Category :</th>
                                        <td class="font-weight-normal">Model1.Applicant.Reservation.CategoryCode</td>
                                    </tr>
                                    <tr>
                                        <th>Mobile No :</th>
                                        <td class="font-weight-normal">Model1.Applicant.MobileNo</td>
                                        <th>Email Id :</th>
                                        <td class="font-weight-normal">Model1.Applicant.EmailId</td>
                                    </tr>
                                    <tr>
                                        <th>Unit :</th>
                                        <td class="font-weight-normal">Model1.Applicant.UnitCode</td>
                                    </tr>
                                    <tr>
                                        <th colspan="4" class="text-center"></th>
                                    </tr>
                                    <tr>
                                        <th colspan="4">
                                            Reservation:- PDP, Exserviceman, Rural
                                            Medium
                                        </th>
                          @*               <td>Model1.Applicant.Reservation.IsClaimingPDPReservation</td>
                                        <td>Model1.Applicant.Reservation.IsClaimingExServicemenReservation</td>
                                        <td>Model1.Applicant.Reservation.IsClaimingRuralReservation</td> *@
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class=".col-lg-12 col-md-12 paymentpass">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h1>Payment Successful</h1>

                        <div class="success-icon mt-2">
                            <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"
                                 width="100" height="100">
                                <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" />
                                <path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
                            </svg>
                        </div>

                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="text-dark"><strong>Application Number:</strong> Model1.Applicant.ApplicationNo</p>
                                        <p class="text-dark"><strong>Name:</strong> Model1.Applicant.FullName</p>
                                        <p class="text-dark"><strong>Fees Paid:</strong>Model1.Applicant.Fee.FeeAmount</p>
                                    </div>

                                    <div class="col-md-6">
                                        <p class="text-dark"><strong>Unit Name:</strong> Model1.Applicant.UnitCode</p>
                                        <p class="text-dark"><strong>Transaction Number:</strong> Model1.Applicant.Fee.OfflinePaymentReceipt.TransactionNo</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <strong>Payment Sucess:</strong> Your Payment is Sucessfully procedded,
                                            You can now login into "My Application".
                                            <button type="button" class="close" data-dismiss="alert"
                                                    aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="notice text-right text-danger m-0">
                    * Please note that the payment may take up to 24 hours
                    to
                    be
                    reflected.
                </p>
            </div>
        </div>
        <div class="buttons">
            <button class="btn btn-go-back">Go Back</button>
            <a href="/Auth/MyApplication"><button class="btn btn-continue">Continue</button></a>
        </div>
    </div>
</div>
