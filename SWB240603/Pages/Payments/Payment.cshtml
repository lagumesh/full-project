@page
@Model SWB240603.Pages.Payments.PaymentModel
@{
    Layout = "_Payment";
}

<div class="container mt-3">
    <h5 class="mt-4 text-dark text-uppercase font-weight-bold text-center">
        <span>Payment Page</span>
    </h5>
    <hr>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-12 d-flex justify-content-center align-items-center">
                            <div class="box mb-2" style="text-align: -webkit-center;">
                                <div class="box-photo">
                                    <img src="/images/vigneshwar-rajkumar-O9pmqUq1uOU-unsplash.jpg" alt="Photo"
                                         class="img-fluid" style=" height: 100%;">
                                </div>
                                <p class="text-dark text-center p-0 font-weight-bold">
                                    Name: <span class="font-weight-light">
                                        Model1.Applicant.FullName
                                    </span>
                                </p>
                                <div class="box-sign">
                                    <img src="/images/sign.png" alt="Photo" class="img-fluid" style=" height: 100%;">
                                </div>
                                <p class="text-dark text-center p-0 font-weight-bold mt-2">Candidate Signature</p>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-6 col-sm-12 d-flex justify-content-center align-items-center">

                            <table class="table table-striped table-responsive-lg border">
                                <tbody class="font-weight-bold">
                                    <tr>
                                        <th>Application No. :</th>
                                        <td class="font-weight-normal">Model1.Applicant.ApplicationNo</td>

                                        <th>Applying as :</th>

                                        <td class="font-weight-normal">Model1.Applicant.ApplyingTypeCode</td>
                                    </tr>
                                    <tr>
                                        <th>Date of Birth :</th>

                                        <td class="font-weight-normal">Model1.Applicant.DateOfBirth</td>
                                        <th>Gender :</th>

                                        <td class="font-weight-normal">Model1.Applicant.Reservation.GenderCode</td>
                                    </tr>
                                    <tr>
                                        <th>Aadhar No :</th>

                                        <td class="font-weight-normal">Model1.Applicant.AadharNo</td>
                                        <th>Category :</th>

                                        <td class="font-weight-normal">ST</td>
                                    </tr>
                                    <tr>
                                        <th>Mobile No :</th>

                                        <td class="font-weight-normal">Model1.Applicant.MobileNo</td>
                                        <th>Email Id :</th>

                                        <td class="font-weight-normal">Model1.Applicant.EmailId</td>
                                    </tr>
                                    <tr>
                                        <th>Unit :</th>

                                        <td class="font-weight-normal">Model1.Applicant.UnitCode</td>
                                    </tr>
                                    <tr>
                                        <th colspan="4"></th>
                                    </tr>
                                    <tr>
                                        <th colspan="4">Reservation:- PDP, Exserviceman, Rural Medium</th>
                                        @* <td>Model1.Applicant.Reservation.IsClaimingPDPReservation</td>
                                        <td>Model1.Applicant.Reservation.IsClaimingExServicemenReservation</td>
                                        <td>Model1.Applicant.Reservation.IsClaimingRuralReservation</td> *@
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-2">
    <!-- <div class="row"> -->
    <div class="card">
        <div class="card-header heading-data p-0 align-content-center" style="max-height: 40px;">
            <div class="card-title"
                 style="display: flex; justify-content: center; align-items: center; height: 100%;">
                <span class="text-white m-0 font-weight-normal">Fees Details</span>
            </div>
        </div>
        <!-- <div class="col-md-12"> -->
        <div class="col-md-12">
            <div class="table-responsive">

                <table class="table table-bordered text-center tb mt-2">

                    <tbody class="text-center">
                        <tr>
                            <th>Category</th>
                            <td>Model1.Applicant.Reservation.CategoryCode</td>
                            <th>Fees</th>
                            <td class="font-weight-bold">Model1.Applicant.Fee.FeeAmount</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- </div> -->
    <!-- </div> -->
</div>

<div class="container my-2">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-body">
                    <!-- <div class="row payment"> -->
                    <div class="row col-lg-12 col-sm-12 d-flex justify-content-around align-items-center p-2 text-center">
                        <!-- <div class="row"> -->
                        <div class="col-sm-4">
                            <h4>Post Office</h4>
                            <div class="box-photo-download align-items-center">
                                <img src="/images/India_Post_Logo.svg.png" alt="" style="height: 100%; width: 100%;"
                                     class="p-2 my-1">
                            </div>
                            <button class="btn btn-primary my-3">Download</button>
                        </div>
                        <div class="col-sm-4">
                            <h4>Canara Bank</h4>
                            <div class="box-photo-download">
                                <img src="/images/774696blob.png" alt="" style="height: 100%; width: 100%;">
                            </div>


                            <button class="btn btn-primary my-3">Download</button>
                        </div>
                        <div class="col-sm-4">
                            <h4>Online</h4>
                            <div class="box-photo-download">
                                <img src="~/images/3d-hand-making-cashless-payment-from-smartphone.jpg" alt=""
                                     style="height: 100%; width: 100%;" class="p-2 my-1">
                            </div>
                            <a href="PaymentFailed">
                                <button class="btn btn-success my-3">
                                    Processed
                                </button>
                            </a>
                        </div>
                        <!-- </div> -->
                    </div>

                    <!-- </div> -->
                </div>
            </div>
        </div>
    </div>
</div>