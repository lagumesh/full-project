@page
@model AKPWB240601.Pages.AddPostPreviewModel
@{
    Layout = "_Home";
}
<section class="main-section">
    <div class="header-below d-flex align-items-center justify-content-center py-2 shadow-sm bg-white ">
        <p class="mb-0"><img class="header-below-logo" src="./images/LOGO.png"> KSP(Karnataka State Police) Recruitment Cell, Bengaluru, Karnataka.</p>
    </div>
    <!-- Start Breadcumb -->
    <section id="main" class="main">
        <section id="breadcrumb">
            <div class="container-fluid my-1">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <div>
                                <h5 class="page-title mb-0">View Postings details</h5>
                            </div>
                            <ul class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a href="/Posts" class="text-decoration-none">
                                        Home
                                    </a>
                                </li>                             
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Add Post
                                </li>
                                <li class="active">
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Add Post Preview
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
        <!-- End Breadcumb -->
    <div class="Preview-container p-3">
        <div class="previews">
            <h5 class="p-2">Add Postings Details</>           
        </div>
        <div class="preview-content">
            <div  class="preview">
                <table>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Code <span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter code" class="add-post-input1"></td>
                    </tr>

                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Title <span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter code" class="add-post-input1"></td>
