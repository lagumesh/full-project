@page
@model AKPWB240601.Pages.EditJobPostingModel
@{
    Layout = "_Post";
}
<section class="main-section">
    <div class="header-below d-flex align-items-center justify-content-between py-2 shadow-sm bg-white ">
        <p class="mb-0"><img class="header-below-logo" src="./images/LOGO.png"> KSP(Karnataka State Police) Recruitment Cell, Bengaluru, Karnataka.</p>
        <p class="mb-0" id="home-p">Police Constable (Civil) (Men & Women) & (Transgender Men & Women) & Inservice & Backlog</p>
    </div>
    <!-- Start Breadcumb -->
    <section id="main" class="main">
        <section id="breadcrumb">
            <div class="container-fluid my-1">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <a href="/JobPosting" class="text-decoration-none text-dark mt-2">
                                    <span class="material-symbols-outlined me-2">arrow_back</span>
                                </a>
                                <h5 class="page-title mb-0">Edit details</h5>
                            </div>


                            <ul class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a href="/Posts" class="text-decoration-none">
                                        Dashboard
                                    </a>
                                </li>
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Masters
                                </li>
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Posts
                                </li>
                                <li class="active">
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Edit Details
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
    <!-- End Breadcumb -->
    <div class="Preview-container p-3">
        <div class="tab-container">
            <div class="tabs">
                <button class="tab-button active" onclick="showTab('postings')">Add Postings Details</button>
                <button class="tab-button" onclick="showTab('activity')">Add Activity Details</button>
            </div>
            <div class="tab-content-1">
                <div id="postings" class="tab">
                    <table>
                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Code <span>:</span></td>
                            <td class="addpost-td border-box"><input type="text" placeholder="Enter the code" class="add-post-input1"></td>
                        </tr>
                        <tr>
                            <td class="addpost-th d-flex justify-content-between"> Title in English <span>:</span></td>
                            <td class="addpost-td border-box"><input type="text" placeholder="Enter the title in english" class="add-post-input1"></td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between"> Title in Kannada <span>:</span></td>
                            <td class="addpost-td border-box"><input type="text" placeholder="Enter the title in kannada" class="add-post-input1"></td>
                        </tr>


                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Notification in English  <span>:</span></td>
                            <td class="addpost-td border-box"><input type="text" placeholder="Enter the notification" class="add-post-input1"></td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Notification in Kannada <span>:</span></td>
                            <td class="addpost-td border-box"><input type="text" placeholder="Enter the notification" class="add-post-input1"></td>
                        </tr>



                        <tr>
                            <td class="addpost-th d-flex justify-content-between"> Vacancy <span>:</span></td>
                            <td class="addpost-td border-box"><input type="text" placeholder="Enter the vacancy count" class="add-post-input1"></td>
                        </tr>
                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Application start date <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="dd/mm/yyyy" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Application end date  <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="dd/mm/yyyy" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>

                <div id="activity" class="tab" style="display: none;">
                    <table>
                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Application start date <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="dd/mm/yyyy" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Application end date  <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="dd/mm/yyyy" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Payment start date   <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="Select date" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Payment End date   <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="Select date" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Written Exam date  <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="Select date" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Scanning Start date  <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="Select date" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Scanning End date  <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="Select date" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Merit list release date  <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="Select date" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">ETPST Date  <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="Select date" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">ETPST Merit list release date <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="Select date" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">Medical Exam date <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="Select date" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td class="addpost-th d-flex justify-content-between">ETPST Date <span>:</span></td>
                            <td class="addpost-td border-box">
                                <div class="input-wrapper">
                                    <input type="text" placeholder="Select date" class="add-post-input">
                                    <i class="fa-solid fa-calendar-days calendar-icon"></i>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>


        <div class="mt-3 mb-5 d-flex">
            <a href="/JobPosting" class="text-decoration-none">
                <button class="btn btn-secondary rounded-5 text-center d-flex align-items-center text-decoration-none"
                        style="width:fit-content">
                    Cancel
                </button>
            </a>
            <a href="#">
                <button class="btn btn-success rounded-5 text-center ms-2"
                        style="width:fit-content;">
                    Save
                </button>
        </div>
    </div>
</section>
