@page
@model AKPWB240601.Pages.HomePage.EditEventsModel
@{
    Layout = "_Post";
}
<section class="main-section">
    <div class="header-below d-flex align-items-center justify-content-between py-2 shadow-sm bg-white ">
        <p class="mb-0"><img class="header-below-logo" src="~/images/logo.png" /> KSP(Karnataka State Police) Recruitment Cell, Bengaluru, Karnataka.</p>
        <p class="mb-0" id="home-p">Police Constable (Civil) (Men & Women) & (Transgender Men & Women) & Inservice & Backlog</p>
    </div>
    <!-- Start Breadcumb -->
    <section id="main" class="main">
        <section id="breadcrumb">
            <div class="container-fluid my-1">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <a href="/HomePage/HomePageContent" class="text-decoration-none text-dark mt-2">
                                    <span class="material-symbols-outlined me-2">arrow_back</span>
                                </a>
                                <h5 class="page-title mb-0">Edit details</h5>
                            </div>


                            <ul class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a href="/Posts" class="text-decoration-none">
                                        Post
                                    </a>
                                </li>
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Homepage
                                </li>
                                <li class="active">
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Edit news & Events
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
    <!-- End Breadcumb -->
    <div class="Preview-container p-3">
        <div class="previews">
            <h5 class="p-2">News & events details</h5>
        </div>
        <div class="preview-content">
            <div class="preview">
                <table>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Code<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter code" class="add-post-input3"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Date<span>:</span></td>
                        <td class="addpost-td border-box">
                            <div class="input-wrapper1">
                                <input type="text" placeholder="dd/yy/mm" class="add-post-input3"> <i class="fa-solid fa-calendar-days calendar-icon"></i>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Data type <span>:</span></td>
                        <td class="addpost-td border-box">
                            <select class="add-post-input3 form-select">
                                <option value="" disabled selected>Select the event type</option>
                                <option value="option1">Option 1</option>
                                <option value="option2">Option 2</option>
                                <option value="option3">Option 3</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Event description<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the event description" class="add-post-input3"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">
                            Schedule start date & time<span>:</span>
                        </td>
                        <td class="addpost-td border-box">
                            <div class="input-wrapper">
                                <input type="text" placeholder="dd/yy/mm" class="add-post-input">
                                <i class="fa-solid fa-calendar-days calendar-icon"></i>
                            </div>
                            <div class="input-wrapper">
                                <input type="text" placeholder="hh/mm/ss" class="add-post-input1 timepicker">
                                <i class="fa-regular fa-clock clock-icon"></i>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">
                            Scheduled end date & time<span>:</span>
                        </td>
                        <td class="addpost-td border-box">
                            <div class="input-wrapper">
                                <input type="text" placeholder="dd/yy/mm" class="add-post-input">
                                <i class="fa-solid fa-calendar-days calendar-icon"></i>
                            </div>
                            <div class="input-wrapper">
                                <input type="text" placeholder="hh/mm/ss" class="add-post-input1 timepicker">
                                <i class="fa-regular fa-clock clock-icon"></i>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Links<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the Links" class="add-post-input3"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Uploads<span>:</span></td>
                        <td class="addpost-td border-box">
                            <div class="file-upload-container">
                                <p class="file-upload-text">Choose a file or drag & drop it here</p>
                                <p class="file-upload-info">JPEG, PNG, PDF, and MP4 formats, up to 50MB</p>
                                <label for="file-upload" class="file-upload-label">
                                    <input type="file" id="file-upload" class="add-post-input4" />
                                    <span>Browse file</span>
                                </label>
                            </div>
                        </td>
                    </tr>




                </table>
            </div>
        </div>



        <div class="mt-3 mb-5 d-flex">
            <a href="/HomePage/HomePageContent" class="text-decoration-none">
                <button class="btn btn-secondary rounded-5 text-center d-flex align-items-center text-decoration-none"
                        style="width:fit-content">
                    Cancel
                </button>
            </a>
            <a href="#">
                <button class="btn btn-success rounded-5 text-center ms-2"
                        style="width:fit-content;">
                    Save
                </button>
        </div>
    </div>
</section>

