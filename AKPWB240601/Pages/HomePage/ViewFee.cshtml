@page
@model AKPWB240601.Pages.HomePage.ViewFeeModel
@{
    Layout = "_Post";
}
<section class="main-section">
    <div class="header-below d-flex align-items-center justify-content-between py-2 shadow-sm bg-white ">
        <p class="mb-0"><img class="header-below-logo" src="~/images/logo.png" /> KSP(Karnataka State Police) Recruitment Cell, Bengaluru, Karnataka.</p>
        <p class="mb-0" id="home-p">Police Constable (Civil) (Men & Women) & (Transgender Men & Women) & Inservice & Backlog</p>
    </div>
    <!-- Start Breadcumb -->
    <section id="main" class="main">
        <section id="breadcrumb">
            <div class="container-fluid my-1">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <a href="/HomePage/HomePageContent" class="text-decoration-none text-dark mt-2">
                                    <span class="material-symbols-outlined me-2">arrow_back</span>
                                </a>
                                <h5 class="page-title mb-0">Add details</h5>
                            </div>


                            <ul class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a href="/Posts" class="text-decoration-none">
                                        Post
                                    </a>
                                </li>
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Homepage
                                </li>
                                <li class="active">
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>View Fees
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
    <!-- End Breadcumb -->
    <div class="Preview-container p-3">
        <div class="previews">
            <h5 class="p-2">Fees details</h5>
        </div>
        <div class="preview-content">
            <div class="preview">
                <table>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Code<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter code" class="add-post-input3"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Category<span>:</span></td>
                        <td class="addpost-td border-box">
                            <select class="add-post-input3 form-select">
                                <option value="" disabled selected>Select the category</option>
                                <option value="option1">Option 1</option>
                                <option value="option2">Option 2</option>
                                <option value="option3">Option 3</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Enter fees<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the fees amount" class="add-post-input3"></td>
                    </tr>

                </table>
            </div>
        </div>
    </div>
</section>
