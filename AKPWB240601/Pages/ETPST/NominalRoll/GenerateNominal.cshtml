@page
@model AKPWB240601.Pages.ETPST.NominalRoll.GenerateNominalModel
@{
    Layout = "_Post";
}
<section class="main-section">
    <div class="header-below d-flex align-items-center justify-content-between py-2 shadow-sm bg-white ">
        <p class="mb-0" id="home-p">Recruitment of Stenographer and Data Entry Assistant for Scheduled Caste & Scheduled Tribes - 02 Post</p>
        <p class="mb-0"><img class="header-below-logo" src="~/images/logo.png" />KSP(Karnataka State Police) Recruitment Cell, Bengaluru, Karnataka.</p>
    </div>
    <!-- Start Breadcumb -->
    <section id="main" class="main">
        <section id="breadcrumb">
            <div class="container-fluid my-1">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <a href="/ETPST/NominalRoll/Nominal" class="text-decoration-none text-dark mt-2">
                                    <span class="material-symbols-outlined me-2">arrow_back</span>
                                </a>
                                <h5 class="page-title mb-0">Nominal roll list</h5>
                            </div>


                            <ul class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a href="/Posts" class="text-decoration-none">
                                        Post
                                    </a>
                                </li>
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>ETPST exams
                                </li>
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Nominal roll
                                </li>
                                <li class="active">
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Nominal roll list
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Breadcumb -->
        <div class="container-fluid m-0">
            <div class="custom-toolbar">
                <div class="items-per-page">
                    <select class="form-select" id="itemsPerPage">
                        <option value="10">10</option>
                        <option value="15">15</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                    </select>
                    <span>Entries per page</span>
                </div>
                <div class="d-flex justify-content-center align-items-center gap-1">



                    <!-- Work Flow Button -->
                    <a class="btn add-btn" href="#" id="downloadBtn">
                        Download
                        <span class="material-symbols-outlined">
                            download
                        </span>
                    </a>

                    <!-- Import Button -->
                    <a class="btn import-btn" href="#">
                        Publish call letter
                        <span class="material-symbols-outlined">
                            open_in_new
                        </span>
                    </a>
                </div>



            </div>

            <div class="table-container events-table">
                <table class="table table-responsive rounded-3 custom-table w-100 shadow-sm mt-2" id="exampleTable">
                    <thead>
                        <tr>
                            <th class="custom-header" scope="col">
                                <div class="header-content p-1">
                                    <input type="checkbox" class="form-check-input me-2 header-checkbox" data-table="keyDates">
                                    <span>Sl.No</span>
                                </div>
                            </th>
                            <th class="custom-header" scope="col">
                                <div class="header-content">
                                    <span>Unit name</span>
                                    <div class="sort-icons d-flex align-items-center ms-2">
                                        <span class="material-symbols-outlined sort-asc" data-column="UnitName" data-order="asc" style="margin-bottom:-8px;">arrow_drop_up</span>
                                        <span class="material-symbols-outlined sort-desc" data-column="UnitName" data-order="desc">arrow_drop_down</span>
                                    </div>
                                </div>
                            </th>
                            <th class="custom-header" scope="col">
                                <div class="header-content">
                                    <span>Venue details</span>
                                    <div class="sort-icons d-flex align-items-center ms-2">
                                        <span class="material-symbols-outlined sort-asc" data-column="VenueDetails" data-order="asc" style="margin-bottom:-8px;">arrow_drop_up</span>
                                        <span class="material-symbols-outlined sort-desc" data-column="VenueDetails" data-order="desc">arrow_drop_down</span>
                                    </div>
                                </div>
                            </th>

                            <th class="custom-header" scope="col">
                                <div class="header-content">
                                    <span>File path</span>
                                    <div class="sort-icons d-flex align-items-center ms-2">
                                        <span class="material-symbols-outlined sort-asc" data-column="FilePath" data-order="asc" style="margin-bottom:-8px;">arrow_drop_up</span>
                                        <span class="material-symbols-outlined sort-desc" data-column="FilePath" data-order="desc">arrow_drop_down</span>
                                    </div>
                                </div>
                            </th>

                            <th class="custom-header" scope="col">
                                <div class="header-content">
                                    <span>Action</span>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <tr data-UnitName="Mandya" data-VenueDetails="MandyaUniversity" data-FilePath="dd/mmm/yyyy">
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    <input type="checkbox" class="tbody-checkbox" style="margin-left:-3px">
                                    <span>01</span>
                                </div>
                            </td>
                            <td>Mandya</td>
                            <td>Mandya University, M.C Road, Mandya</td>
                            <td>FILENAMED:\Lagu\front-end\KSP ADMIN</td>


                            <td class="p-0 d-flex align-items-center justify-content-start" style="padding-left:5px !important;">
                                <button type="button" class="btn btn-link text-decoration-none mx-2 d-flex align-items-center generate-name" data-bs-toggle="modal" data-bs-target="#imageModal">
                                    <span class="material-symbols-outlined">visibility</span><span >Preview</span>
                                </button>
                                <span class="mx-2 generate-name">|</span>
                                <a href="/WrittenExam/Nominal/EditNominal" class="text-decoration-none  mx-2 d-flex align-items-center generate-name">
                                    <span class="material-symbols-outlined">download</span><span class="ms-1">Download</span>
                                </a>
                                <span class="mx-2 generate-name">|</span>
                                <span class="mx-2 d-flex align-items-center generate-name">
                                    <span class="material-symbols-outlined">open_in_new</span><span class="ms-1">Publish call letter</span>
                                </span>
                            </td>



                        </tr>



                    </tbody>
                </table>

            </div>
            <div class="d-flex justify-content-between align-items-center mt-2 mb-5">
                <div id="entriesInfo" class="entries-info">
                </div>
                <!-- Pagination -->
                <div class="pagination-container">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-end" id="pagination">
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- Modal Structure -->
            <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content ">
                        <div class="modal-body text-center">
                            <img src="~/images/nominal.png" class="img-fluid" alt="Nominal Roll Preview">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

</section>
