@page
@model AKPWB240601.Pages.AddUserDetailsModel
@{
    Layout = "_Post";
}
<section class="main-section">
    <div class="header-below d-flex align-items-center justify-content-between py-2 shadow-sm bg-white ">
        <p class="mb-0"><img class="header-below-logo" src="./images/LOGO.png"> KSP(Karnataka State Police) Recruitment Cell, Bengaluru, Karnataka.</p>
        <p class="mb-0" id="home-p">Police Constable (Civil) (Men & Women) & (Transgender Men & Women) & Inservice & Backlog</p>
    </div>
    <!-- Start Breadcumb -->
    <section id="main" class="main">
        <section id="breadcrumb">
            <div class="container-fluid my-1">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <a href="/UserDetail" class="text-decoration-none text-dark mt-2">
                                    <span class="material-symbols-outlined me-2">arrow_back</span>
                                </a>
                                <h5 class="page-title mb-0">Add details</h5>
                            </div>


                            <ul class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a href="/Posts" class="text-decoration-none">
                                        Post
                                    </a>
                                </li>
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Masters
                                </li>
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>User details
                                </li>
                                <li class="active">
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Add Details
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
    <!-- End Breadcumb -->
    <div class="Preview-container p-3">
        <div class="previews">
            <h5 class="p-2">User details details</h5>
        </div>
        <div class="preview-content">
            <div class="preview">
                <table>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">User name<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the User name" class="add-post-input1"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Password<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the Password" class="add-post-input1"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Staff id<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the Staff id" class="add-post-input1"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Name of the staff<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the Name of the staff" class="add-post-input1"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">
                            Department<span>:</span>
                        </td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the Department" class="add-post-input1"></td>
                    </tr> 
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">
                            Designation<span>:</span>
                        </td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the Designation" class="add-post-input1"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">
                            Email address<span>:</span>
                        </td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the Email address" class="add-post-input1"></td>
                    </tr>  
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">
                            Mobile no.<span>:</span>
                        </td>
                        <td class="addpost-td border-box"><input type="text" placeholder="00000 00000" class="add-post-input1"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Roles <span>:</span></td>
                        <td class="addpost-td border-box">
                            <select class="add-post-input1 form-select">
                                <option value="" disabled selected>Select the Roles</option>
                                <option value="option1">Option 1</option>
                                <option value="option2">Option 2</option>
                                <option value="option3">Option 3</option>
                            </select>
                        </td>
                    </tr> 
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Status <span>:</span></td>
                        <td class="addpost-td border-box">
                            <select class="add-post-input1 form-select">
                                <option value="" disabled selected>Select the Status</option>
                                <option value="option1">Option 1</option>
                                <option value="option2">Option 2</option>
                                <option value="option3">Option 3</option>
                            </select>
                        </td>
                    </tr>
                  
                </table>
            </div>
        </div>



        <div class="mt-3 mb-5 d-flex">
            <a href="/UserDetail" class="text-decoration-none">
                <button class="btn btn-secondary rounded-5 text-center d-flex align-items-center text-decoration-none"
                        style="width:fit-content">
                    Cancel
                </button>
            </a>
            <a href="#">
                <button class="btn btn-success rounded-5 text-center ms-2"
                        style="width:fit-content;">
                    Save
                </button>
        </div>
    </div>
</section>