@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="login-banner d-flex align-items-center">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-5 col-lg-5">
				<div class="card login-card">
					<div class="card-body text-start p-0">
						<div class="logo mb-3 d-flex align-items-start justify-content-start">
							<img src="./images/LOGO.png" alt="Logo" class="img-fluid login-logo">
						</div>
						<h2 class="mb-3 logo-h2">Admin Sign in</h2>
						<form id="loginForm" autocomplete="off">
							<div class="form-group text-left mb-2">
								<label for="username" class="form-label">Username</label>
								<input type="text" class="form-control" id="username" name="username" placeholder="Enter your user name" required autocomplete="off">
							</div>
							<div class="form-group text-left mb-2 position-relative">
								<label for="password" class="form-label">Password</label>
								<div class="position-relative">
									<input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required autocomplete="off">
									<span class="material-symbols-outlined toggle-password-login" id="togglePassword">
										visibility_off
									</span>
								</div>
								<a href="/ForgotPassword" class="d-block text-end forgot-password mb-0 mt-2">Forgot Password?</a>
							</div>

							<a href="/JobPosting">
								<button type="button" class="btn btn-primary w-100 login-button">Login</button>
							</a>
						</form>
						<p class="text-center mt-3 termsandconditions">By continuing, you agree to the <a href="#" class="text-warning">Terms of use</a> and <a href="#" class="text-warning">Privacy Policy</a>.</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

