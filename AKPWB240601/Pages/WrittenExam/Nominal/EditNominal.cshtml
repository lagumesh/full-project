@page
@model AKPWB240601.Pages.WrittenExam.Nominal.EditNominalModel
@{
    Layout = "_Post";
}
<section class="main-section">
    <div class="header-below d-flex align-items-center justify-content-between py-2 shadow-sm bg-white ">
        <p class="mb-0" id="home-p">Recruitment of Stenographer and Data Entry Assistant for Scheduled Caste & Scheduled Tribes - 02 Post</p>
        <p class="mb-0"><img class="header-below-logo" src="~/images/LOGO.png"> KSP(Karnataka State Police) Recruitment Cell, Bengaluru, Karnataka.</p>
    </div>
    <!-- Start Breadcumb -->
    <section id="main" class="main">
        <section id="breadcrumb">
            <div class="container-fluid my-1">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <a href="/WrittenExam/Nominal/Nominal" class="text-decoration-none text-dark mt-2">
                                    <span class="material-symbols-outlined me-2">arrow_back</span>
                                </a>
                                <h5 class="page-title mb-0">Edit details</h5>
                            </div>


                            <ul class="breadcrumb mb-0">
                                <li class="breadcrumb-item">
                                    <a href="/Posts" class="text-decoration-none">
                                        Post
                                    </a>
                                </li>
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Written exams
                                </li>
                                <li>
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Nominal roll
                                </li>
                                <li class="active">
                                    <span class="material-symbols-outlined">
                                        chevron_right
                                    </span>Edit Details
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
    <!-- End Breadcumb -->
    <div class="Preview-container p-3">
        <div class="previews">
            <h5 class="p-2">Nominal roll details</h5>
        </div>
        <div class="preview-content">
            <div class="preview">
                <table>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Unit name<span>:</span></td>
                        <td class="addpost-td border-box">
                            <select class="add-post-input1 form-select">
                                <option value="" disabled selected>Select the Unit name</option>
                                <option value="option1">Option 1</option>
                                <option value="option2">Option 2</option>
                                <option value="option3">Option 3</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Venue Address<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the Venue Address" class="add-post-input1"></td>
                    </tr>

                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Date <span>:</span></td>
                        <td class="addpost-td border-box position-relative">
                            <input type="text" placeholder="dd/mm/yyyy" class="add-post-input1 pl-4">
                            <span class="material-symbols-outlined " style="right:10px;top:20px;position:absolute">
                                calendar_month
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Name<span>:</span></td>
                        <td class="addpost-td border-box"><input type="text" placeholder="Enter the Name" class="add-post-input1"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Application no.<span>:</span></td>
                        <td class="addpost-td border-box">
                            <select class="add-post-input1 form-select">
                                <option value="" disabled selected>Select the Application no</option>
                                <option value="option1">Option 1</option>
                                <option value="option2">Option 2</option>
                                <option value="option3">Option 3</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Roll no.<span>:</span></td>
                        <td class="addpost-td border-box">  <input type="text" placeholder="Enter the Roll no." class="add-post-input"></td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Category<span>:</span></td>
                        <td class="addpost-td border-box">
                            <select class="add-post-input1 form-select">
                                <option value="" disabled selected>Select the Category</option>
                                <option value="option1">Option 1</option>
                                <option value="option2">Option 2</option>
                                <option value="option3">Option 3</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Date of birth <span>:</span></td>
                        <td class="addpost-td border-box position-relative">
                            <input type="text" placeholder="dd/mm/yyyy" class="add-post-input1 pl-4">
                            <span class="material-symbols-outlined " style="right:10px;top:20px;position:absolute">
                                calendar_month
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Gender<span>:</span></td>
                        <td class="addpost-td border-box">
                            <select class="add-post-input1 form-select">
                                <option value="" disabled selected>Select the Gender</option>
                                <option value="option1">Option 1</option>
                                <option value="option2">Option 2</option>
                                <option value="option3">Option 3</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Applying As<span>:</span></td>
                        <td class="addpost-td border-box">
                            <select class="add-post-input1 form-select">
                                <option value="" disabled selected>Select the Applying As</option>
                                <option value="option1">Option 1</option>
                                <option value="option2">Option 2</option>
                                <option value="option3">Option 3</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Photo<span>:</span></td>
                        <td class="addpost-td border-box">
                            <div class="file-upload-container">
                                <p class="file-upload-text">Choose a file or drag & drop it here</p>
                                <p class="file-upload-info">JPEG, PNG, PDF, and MP4 formats, up to 50MB</p>
                                <label for="file-upload" class="file-upload-label">
                                    <input type="file" id="file-upload" class="add-post-input4" />
                                    <span>Browse file</span>
                                </label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="addpost-th d-flex justify-content-between">Signature<span>:</span></td>
                        <td class="addpost-td border-box">
                            <div class="file-upload-container mt-2">
                                <p class="file-upload-text">Choose a file or drag & drop it here</p>
                                <p class="file-upload-info">JPEG, PNG, PDF, and MP4 formats, up to 50MB</p>
                                <label for="file-upload" class="file-upload-label">
                                    <input type="file" id="file-upload" class="add-post-input4" />
                                    <span>Browse file</span>
                                </label>
                            </div>
                        </td>
                    </tr>

                </table>
            </div>
        </div>



        <div class="mt-3 mb-5 d-flex">
            <a href="/WrittenExam/Nominal/Nominal" class="text-decoration-none">
                <button class="btn btn-secondary rounded-5 text-center d-flex align-items-center text-decoration-none"
                        style="width:fit-content">
                    Cancel
                </button>
            </a>
            <a href="#">
                <button class="btn btn-success rounded-5 text-center ms-2"
                        style="width:fit-content;">
                    Save
                </button>
        </div>
    </div>
</section>