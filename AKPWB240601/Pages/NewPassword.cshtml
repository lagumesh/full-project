@page
@model AKPWB240601.Pages.NewPasswordModel
@{
    ViewData["Title"] = "Home page";
}
<section class="login-banner d-flex align-items-center">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-5 col-lg-5">
				<div class="card login-card">
					<div class="card-body text-start p-0">
						<div class="logo mb-3 d-flex align-items-start justify-content-start">
							<img src="./images/LOGO.png" alt="Logo" class="img-fluid login-logo">
						</div>
						<h2 class="mb-3 logo-h2">Reset password</h2>
                        <form id="loginForm" autocomplete="off">
                            <div class="form-group text-left mb-2 position-relative">
                                <label for="newPassword" class="form-label">New password</label>
                                <div class="position-relative">
                                    <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Enter Password" required autocomplete="off">
                                    <span class="material-symbols-outlined toggle-password-login" id="toggleNewPassword">visibility_off</span>
                                    <span id="tickMark" style="display: none; color: green;">&#10003;</span>
                                </div>
                            </div>
                            <div class="form-group text-left mb-2 position-relative">
                                <label for="confirmPassword" class="form-label">Confirm new password</label>
                                <div class="position-relative">
                                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Enter Password" required autocomplete="off">
                                    <span class="material-symbols-outlined toggle-password-login" id="toggleConfirmPassword">visibility_off</span>
                                    <span id="confirmTickMark" style="display: none; color: green;">&#10003;</span>
                                </div>
                            </div>
                            <button type="button" id="loginButton" class="btn btn-primary w-100 login-button">Login</button>
                        </form>

						
					</div>
				</div>
			</div>
		</div>
	</div>
</section>