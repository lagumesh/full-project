@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Login_Layout";
}

<section id="signin">
	<div class="container-fluid p-0 m-0 signin">
		<div class="row m-0 p-0">
			<div class="col-12 m-0 p-0 d-flex flex-wrap justify-content-between align-items-center">
				<div class="col-md-6 py-5 signin-left-section">
					<h3>Welcome To</h3>
					<h1>SRI VENKATESHWARA UNIVERSITY.</h1>
					<img src="./Assets/Images/SigninBanner.png" class="signin-img" alt="Signin-Img" />
				</div>
				<div class="col-md-6 p-3 signin-right-section d-flex justify-content-center align-items-center">
					<div class="card">
						<div class="card-body">
							<img src="./Assets/Images/SVU-Signin-Page-Logo.svg" alt="University-Logo" class="img-fluid university-logo mb-4" />
							<h1 class="mb-3 text-start">Admin Login</h1>
							<form>
								<div>
									<label class="form-label">User Name</label>
									<input type="text" class="form-control mb-2" name="admission number" placeholder="Enter Your User Name" />
								</div>
								<div>
									<label class="form-label">Password</label>
									<input type="password" class="form-control mb-4" name="password" placeholder="Enter Your Password" />
								</div>
								<a href="/dashboard" class="btn signin-btn w-100">Sign In </a>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

