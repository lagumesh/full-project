@page
@model UAMS3.Admin.Pages.addprogrammesModel
@{
    Layout = "_Layout";
}

<!-- Start Breadcumb -->
<section id="main" class="main">
	<section id="breadcrumb">
		<div class="container-fluid my-2">
			<div class="row">
				<div class="col-12">
					<div class="d-flex flex-wrap justify-content-between">
						<div>
							<p class="page-title mb-0">Programme</p>
						</div>
						<ol class="breadcrumb mb-0">
							<i class="bi bi-house-door-fill"></i>
							<li class="breadcrumb-item">
								Dashboard <span><i class="bi bi-chevron-right"></i></span>
							</li>
							<li class="active">Programme</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End Breadcumb -->

	<!-- Start Add Programme Section -->
	<section id="add-pages" class="add-country mb-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-body p-0">
							<div class="nav nav-tabs mb-3">
								<button class="nav-link active" data-bs-toggle="tab" data-bs-target="#master">Master</button>
								<button class="nav-link" data-bs-toggle="tab" data-bs-target="#electivegroup">Elective Group</button>
								<button class="nav-link" data-bs-toggle="tab" data-bs-target="#electivegroupsub">Elective Group Subject</button>
								<button class="nav-link" data-bs-toggle="tab" data-bs-target="#medium">Medium</button>
								<button class="nav-link" data-bs-toggle="tab" data-bs-target="#subgroup">Sub Groups</button>
								<button class="nav-link" data-bs-toggle="tab" data-bs-target="#subgroupsub">Sub Group Subject</button>
								<button class="nav-link" data-bs-toggle="tab" data-bs-target="#subjects">Subjects</button>
							</div>
							<div class="tab-content">
								<!-- Start Master Tab Section -->
								<div class="tab-pane fade show active px-3" id="master">
									<ul class="px-0">
										<li>
											<span>Code</span>
											<input type="text" placeholder="Code" />
										</li>
										<li>
											<span>Title</span>
											<input type="text" placeholder="Title" />
										</li>
										<li>
											<span>Display Title</span>
											<input type="text" placeholder="Display Title" />
										</li>
										<li>
											<span>Total Terms</span>
											<input type="text" placeholder="Total Terms" />
										</li>
										<li>
											<span>Course</span>
											<input type="text" placeholder="Course" />
										</li>
									</ul>
								</div>
								<!-- End Master Tab Section -->
								<!-- Start Application No Tab Section -->
								<div class="tab-pane fade px-3" id="electivegroup">
									<ul class="px-0">
										<li>
											<span>Term Index</span>
											<select class="select">
												<option defaultValue>Select Term Index</option>
												<option>Term Index 01</option>
												<option>Term Index 02</option>
											</select>
										</li>
										<li>
											<span>Effective Group Code</span>
											<input type="text" placeholder="Group Code" />
										</li>
										<li>
											<span>Selectable Subject Count</span>
											<input type="text" placeholder="Count" />
										</li>
									</ul>
								</div>
								<!-- End Application No Tab Section -->
								<!-- Start Programme Tab Section -->
								<div class="tab-pane fade px-3" id="electivegroupsub">
									<ul class="px-0">
										<li>
											<span>Term Index</span>
											<select class="select">
												<option defaultValue>Select Term Index</option>
												<option>Term Index 01</option>
												<option>Term Index 02</option>
											</select>
										</li>
										<li>
											<span>Effective Group</span>
											<select class="select">
												<option defaultValue>Select Effective Group</option>
												<option>Group 01</option>
												<option>Group 02</option>
											</select>
										</li>
										<li>
											<span>Subjects</span>
											<select class="select">
												<option defaultValue>Select Subjects</option>
												<option>Physics</option>
												<option>Chemistry</option>
											</select>
										</li>
									</ul>
								</div>
								<!-- End Programme Tab Section -->
								<!-- Start Eligibility Tab Section -->
								<div class="tab-pane fade px-3" id="medium">
									<ul class="px-0">
										<li>
											<span>Term Index</span>
											<select class="select">
												<option defaultValue>Select Term Index</option>
												<option>Term Index 01</option>
												<option>Term Index 02</option>
											</select>
										</li>
									</ul>
								</div>
								<!-- End Eligibility Tab Section -->

								<div class="tab-pane fade px-3" id="subgroup">
									<ul class="px-0">
										<li>
											<span>Code</span>
											<input type="text" placeholder="Code" />
										</li>
										<li>
											<span>Title</span>
											<input type="text" placeholder="Title" />
										</li>
									</ul>
								</div>

								<!-- Start Fee Detail Tab Section -->
								<div class="tab-pane fade px-3" id="subgroupsub">
									<ul class="px-0">
										<li>
											<span>Sub Group</span>
											<select class="select">
												<option defaultValue>Select Sub Group</option>
												<option>Sub Group 01</option>
												<option>Sub Group 02</option>
											</select>
										</li>
										<li>
											<span>Term Index</span>
											<select class="select">
												<option defaultValue>Select Term Index</option>
												<option>Term Index 01</option>
												<option>Term Index 02</option>
											</select>
										</li>
										<li>
											<span>Subject</span>
											<select class="select">
												<option defaultValue>Select the Subject</option>
												<option>Chemistry</option>
												<option>Physics</option>
											</select>
										</li>
									</ul>
								</div>
								<!-- End Fee Detail Tab Section -->

								<div class="tab-pane fade px-3" id="subjects">
									<ul class="px-0">
										<li>
											<span>Term Index</span>
											<select class="select">
												<option defaultValue>Select Term Index</option>
												<option>Term Index 01</option>
												<option>Term Index 02</option>
											</select>
										</li>
										<li>
											<span>Position Index</span>
											<select class="select">
												<option defaultValue>Select Position Index</option>
												<option>Position Index 01</option>
												<option>Position Index 02</option>
											</select>
										</li>
										<li>
											<span>Order Index</span>
											<select class="select">
												<option defaultValue>Select Order Index</option>
												<option>Order Index 01</option>
												<option>Order Index 02</option>
											</select>
										</li>
										<li>
											<span>Subjects</span>
											<select class="select">
												<option defaultValue>Select the Subject</option>
												<option>Chemistry</option>
												<option>Physics</option>
											</select>
										</li>
										<li>
											<span>Paper Type</span>
											<select class="select">
												<option defaultValue>Select Paper Type</option>
												<option>Paper Type 01</option>
												<option>Paper Type 02</option>
											</select>
										</li>
										<li>
											<span>Is Elective Subject</span>
											<input class="radio-btn" type="radio" name="flexRadioDefault" id="flexRadioDefault1" />
											<label class="mx-2" for="flexRadioDefault1">Yes</label>
											<input class="radio-btn" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked />
											<label class="ms-2" for="flexRadioDefault2">No</label>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="d-flex justify-content-between align-items-center">
				<button class="back-btn"><span><i class="bi bi-arrow-left"></i></span>Back</button>
				<button class="save-btn"><span><i class="bi bi-floppy"></i></span>Save</button>
			</div>
		</div>
	</section>
</section>
<!-- End Add Programme Section -->