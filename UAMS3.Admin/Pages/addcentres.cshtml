@page
@model UAMS3.Admin.Pages.addcentresModel
@{
    Layout = "_Layout";
}

<!-- Start Breadcumb -->
<section id="main" class="main">
	<section id="breadcrumb">
		<div class="container-fluid my-2">
			<div class="row">
				<div class="col-12">
					<div class="d-flex flex-wrap justify-content-between">
						<div>
							<p class="page-title mb-0">Centre</p>
						</div>
						<ol class="breadcrumb mb-0">
							<i class="bi bi-house-door-fill"></i>
							<li class="breadcrumb-item">
								Dashboard <span><i class="bi bi-chevron-right"></i></span>
							</li>
							<li class="active">Centre</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End Breadcumb -->

	<!-- Start Add Centre Section -->
	<section id="add-pages" class="add-country mb-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<p class="card-title px-3 py-1">Centre Details</p>
						<div class="card-body px-3 py-2">
							<ul class="px-0">
								<li>
									<span>Code</span>
									<input type="text" placeholder="Code" />
								</li>
								<li>
									<span>Display Code</span>
									<input type="text" placeholder="Display Code" />
								</li>
								<li>
									<span>Full Name</span>
									<input type="text" placeholder="Full Name" />
								</li>
								<li>
									<span>Taluk</span>
									<input type="text" placeholder="Taluk Name" />
								</li>
								<li>
									<span>City</span>
									<input type="text" placeholder="City Name" />
								</li>
						
								<li>
									<span>State</span>
									<select class="select">
										<option defaultValue>Select State</option>
										<option>TamilNadu</option>
										<option>Karnataka</option>
									</select>
								</li>

								<li>
									<span>District</span>
									<select class="select">
										<option defaultValue>Select District</option>
										<option>Bellari</option>
										<option>Shivmoga</option>
									</select>
								</li>
								<li>
									<span>Pin Code</span>
									<input type="text" placeholder="Pin Code" />
								</li>
								<li>
									<span>Phone Number</span>
									<input type="text" placeholder="Phone Number" />
								</li>
								<li>
									<span>Email Id</span>
									<input type="text" placeholder="Email Id" />
								</li>
								<li>
									<span>University</span>
									<input type="text" placeholder="University Name" />
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="d-flex justify-content-between align-items-center">
				<button class="back-btn"><span><i class="bi bi-arrow-left"></i></span>Back</button>
				<button class="save-btn"><span><i class="bi bi-floppy"></i></span>Save</button>
			</div>
		</div>
	</section>
</section>
<!-- End Add Centre Section -->
