@page
@model UAMS3.Admin.Pages.universitydetailsModel
@{
    Layout = "_Layout";
}

<!-- Start Breadcumb -->
<section id="main" class="main">
	<section id="breadcrumb">
		<div class="container-fluid my-2">
			<div class="row">
				<div class="col-12">
					<div class="d-flex flex-wrap justify-content-between">
						<div>
							<p class="page-title mb-0">University Details</p>
						</div>
						<ol class="breadcrumb mb-0">
							<i class="bi bi-house-door-fill"></i>
							<li class="breadcrumb-item">
								Dashboard <span><i class="bi bi-chevron-right"></i></span>
							</li>
							<li class="active">University Details</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End Breadcumb -->

	<!-- Start University Details Section -->
	<section class="university-details mb-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<!-- Start Add Delete Section -->
					<section class="delete-add-search mb-3">
						<div class="card">
							<div class="card-body py-2">
								<div class="d-flex justify-content-between align-items-center">
									<button class="delete-btn"><span><i class="bi bi-trash3"></i></span>Delete</button>
									<a href="/adduniversities">
										<button class="add-btn"><span><i class="bi bi-plus-lg"></i></span>Add</button>
									</a>
								</div>
							</div>
						</div>
					</section>
					<!-- End  Add Delete Section -->

					<!-- Start University Details Table Section -->
					<div class="table-responsive">
						<table class="table table-striped table-hover" style="width: 100%">
							<thead>
								<tr>
									<th>Code</th>
									<th>Display Title</th>
									<th>University Name</th>
									<th>Address</th>
								</tr>
							</thead>

							<tbody>
								<tr>
									<td class="col-2">9678</td>
									<td class="col-2">Display Title 01</td>
									<td class="col-5">Sri Venkateshwara University, Tirupathi</td>
									<td>Tirupathi</td>
								</tr>
							</tbody>
						</table>
					</div>
					<!-- End University Details Table Section -->
				</div>
			</div>
		</div>
	</section>
</section>
<!-- End University Details Section -->