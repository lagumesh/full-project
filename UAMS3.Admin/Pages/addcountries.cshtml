@page
@model UAMS3.Admin.Pages.addcountriesModel
@{
	Layout = "_Layout";
}

<!-- Start Breadcumb -->
<section id="main" class="main">
	<section id="breadcrumb">
		<div class="container-fluid my-2">
			<div class="row">
				<div class="col-12">
					<div class="d-flex flex-wrap justify-content-between">
						<div>
							<p class="page-title mb-0">Countries</p>
						</div>
						<ol class="breadcrumb mb-0">
							<i class="bi bi-house-door-fill"></i>
							<li class="breadcrumb-item">
								Dashboard <span><i class="bi bi-chevron-right"></i></span>
							</li>
							<li class="active">Countries</li>
						</ol>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End Breadcumb -->

	<!-- Start Add Country Section -->
	<section id="add-pages" class="add-country mb-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<p class="card-title px-3 py-1">Country Details</p>
						<div class="card-body px-3 py-2">
							<ul class="px-0">
								<li>
									<span>Select Country Code</span>
									<select class="select">
										<option defaultValue>+91</option>
										<option>+091</option>
										<option>+081</option>
									</select>
								</li>
								<li>
									<span>Select Country</span>
									<select class="select">
										<option defaultValue>Select Country Name</option>
										<option>India</option>
										<option>America</option>
									</select>
								</li>
								<li>
									<span>Name of the Person</span>
									<input type="text" placeholder="Person Name" />
								</li>
								<li>
									<span>Status</span>
									<select class="select">
										<option defaultValue>Select Status</option>
										<option>Process</option>
										<option>Pending</option>
									</select>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="d-flex justify-content-between align-items-center">
				<button class="back-btn"><span><i class="bi bi-arrow-left"></i></span>Back</button>
				<button class="save-btn"><span><i class="bi bi-floppy"></i></span>Save</button>
			</div>
		</div>
	</section>
</section>
<!-- End Add Country Section -->