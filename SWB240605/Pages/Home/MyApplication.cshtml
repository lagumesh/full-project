<script>
    function DownloadApplicationPDF(applicantNo) {
        //alert('ll')

        var fileName = 'Application_' + applicantNo + '.pdf';

        $.ajax({
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            dataType: 'JSON',
            url: '?handler=getApplicationPath&applicationNo=' + applicantNo + '',
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            },
            success:
                function (response) {
                    var link = document.createElement('a');
                    link.href = response;
                    link.download = fileName;
                    link.click();
                    notyf.success('file ' + fileName + ' Downloaded');
                },
            error:
                function (response) {
                    alert('error: ' + response);
                }
        });
    }
</script>